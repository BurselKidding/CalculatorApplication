<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CalculaterGripLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="16"
    android:columnCount="4"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/outputText"
        android:layout_columnSpan="4"
        android:text=""
        android:textSize="50sp"
        android:height="65mm"
        android:layout_marginLeft="1mm"
        android:layout_marginRight="1mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="C"
        android:width="33mm"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:id="@+id/delAll"
        />

    <Button
        android:text="Del"
        android:width="33mm"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:id="@+id/Del"
        />

    <Button
        android:text="("
        android:width="33mm"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:id="@+id/opParenthesis"
        />

    <Button
        android:text=")"
        android:width="33mm"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:id="@+id/clsParenthesis"
        />

    <Button
        android:text="+"
        android:width="16.5mm"
        android:id="@+id/Plus"
        />

    <Button
        android:text="1"
        android:id="@+id/One"
        android:width="16.5mm"
        />
    <Button
        android:text="2"
        android:width="16.5mm"
        android:id="@+id/Two"
        />
    <Button
        android:text="3"
        android:width="16.5mm"
        android:id="@+id/Three"
        />
    <Button
        android:text="-"
        android:width="16.5mm"
        android:id="@+id/Sub"
        />
    <Button
        android:text="4"
        android:width="16.5mm"
        android:id="@+id/Four"
        />
    <Button
        android:text="5"
        android:width="16.5mm"
        android:id="@+id/Five"
        />
    <Button
        android:text="6"
        android:width="16.5mm"
        android:id="@+id/Six"
        />
    <Button
        android:text="*"
        android:width="16.5mm"
        android:id="@+id/Multiple"
        />
    <Button
        android:text="7"
        android:width="16.5mm"
        android:id="@+id/Seven"
        />
    <Button
        android:text="8"
        android:width="16.5mm"
        android:id="@+id/Eight"
        />
    <Button
        android:text="9"
        android:width="16.5mm"
        android:id="@+id/Night"
        />
    <Button
        android:text="/"
        android:width="16.5mm"
        android:id="@+id/Divide"
        />
    <Button
        android:layout_width="wrap_content"
        android:text="."
        android:width="16.5mm"
        android:id="@+id/Point"
        />
    <Button
        android:text="0"
        android:width="16.5mm"
        android:id="@+id/Zero"
        />
    <Button
        android:text="="
        android:width="16.5mm"
        android:id="@+id/Equals"
        />

</GridLayout>